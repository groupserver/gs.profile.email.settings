<html
  xmlns="http://www.w3.org/1999/xhtml"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  metal:use-macro="context/@@groupserver_layout/page"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  i18n_domain="groupserver">
  <head>
    <title metal:fill-slot="title">
      <span tal:replace="string:${view/label}: ${view/userInfo/name}: ${view/siteInfo/name}"/>
    </title>
    <tal:block metal:fill-slot="style"> 
      <style type="text/css">
        body {
          text-align: left;
        }
        
        .hide {
          display: none;
        }
        
        .draggable {
          display: inline-block;
        }
        
        #change-email-settings-form {
          display: None;
        }
        #delivery-addresses, #other-addresses, #unverified-addresses { 
          background: #EEEEEE;
          list-style-type: none; 
          margin: 0.69em; 
          padding: 0.69em;
        }
        #delivery-addresses li, #other-addresses li, #unverified-addresses li {
          list-style-type: none;
          margin: 0.69em; 
          padding: 0.69em; 
        }
        
        .addresslists li {
          height: 33px;
        }
        .addresslists .email, .draggable {
          margin-top: 5px;
        }
        
        .actions {
          float: right;
        }
        .removeLink:hover, .resendLink:hover {
          cursor: pointer;
        }
        .ui-sortable li.ui-state-highlight {
          cursor: move;
        }
        
        #add-email-address-form .buttons {
          float: right;
        }
      </style>
    </tal:block>
  </head>
  <body>
    <tal:block 
      define="errors view/errors; status view/status; widgets view/widgets"
      content="structure provider:groupserver.FormStatusMessage"
      metal:fill-slot="messages">&#160;</tal:block>
    <tal:block metal:fill-slot="contextnavigation">
      <span 
        tal:replace="structure provider:groupserver.ProfileContextMenu">
        Context Menu
      </span>
    </tal:block>
    <tal:block metal:fill-slot="body">
      <h1 tal:content="view/label">Change Email Settings</h1>
      <div id="change-email-intro"
        i18n:translate="gs_profile_email_settings_settings_description">
        <p tal:condition="view/showOtherAddresses">
          To change the addresses that are used to send you email from
          your groups, 
          <strong>click and drag</strong> the addresses between the
          <samp class="list">Preferred Delivery Addresses</samp> and
          <samp class="list">Extra Addresses</samp> lists.
        </p>
        <p id="change-email-intro-add">
          To <strong>add</strong> an address, click the 
          <samp class="button">Add an address&#8230;</samp> button below.
        </p>
      </div><!--change-email-intro-->
      <form enctype="multipart/form-data"  method="post" action="."
        id="change-email-settings-form" tal:attributes="action request/URL">
        <tal:block define="widgets python:[w for w in view.widgets][:4]">
          <tal:block replace="structure provider:groupserver.FormWidgets"/>
        </tal:block>
        <div class="buttons">
          <tal:block define="action view/actions/form.actions.change">
            <div class="formelementbutton">
              <span tal:replace="structure action/render">Button</span>
            </div>
          </tal:block>
        </div><!--buttons-->
      </form><!-- form -->
      <div class="addresslists">
        <div id="preferred">
          <h3 i18n:translate="XXX">Preferred Delivery Addresses</h3>
          <ul id="delivery-addresses">
            <li class="ui-state-default ui-corner-all"
              tal:define="address python:view.deliveryAddresses[0]"
              tal:condition="python:len(view.deliveryAddresses)==1"
              tal:attributes="id address">
              <samp class="email" 
                tal:content="address">email@example.com</samp>
              <span class="actions">
                <a class="removeLink" href="#"
                  title="Remove this address from your profile"
                  tal:condition="view/otherAddresses"
                  tal:attributes="id string:remove-${address}">Remove</a>
              </span><!--actions-->
            </li>
            <li class="ui-state-highlight ui-corner-all"
              tal:condition="python:len(view.deliveryAddresses)>1"
              tal:repeat="address view/deliveryAddresses"
              tal:attributes="id address"
              title="Drag this address to the Extra Addresses list to stop recieving email on this address by default.">
              <samp class="email"
                tal:content="address">email@example.com</samp>
              <span class="actions">
                <a class="removeLink"
                  title="Remove this address from your profile"
                  tal:attributes="id string:remove-${address}">Remove</a>
              </span><!--actions-->
            </li>
          </ul>
        </div><!--preferred-->
        <div id="other"
          tal:attributes="class python:view.showOtherAddresses and 'show' or 'hide'">
          <h3 i18n:translate="XXX">Extra Addresses</h3>
          <ul id="other-addresses">
            <li class="ui-state-highlight ui-corner-all"
              tal:repeat="address view/otherAddresses"
              tal:attributes="id address"
              title="Drag this address to the Preferred Delivery Addresses list to recieve email on this address by default.">
              <samp class="email" 
                tal:content="address">email@example.com</samp>
              <span class="actions">
                <a class="removeLink"
                  title="Remove this address from your profile"
                  tal:attributes="id string:remove-${address}">Remove</a>
              </span><!--actions-->
            </li>
          </ul>
        </div><!--other-->
        <div id="unverified"
          tal:define="show view/unverifiedAddresses"
          tal:attributes="class python:show and 'show' or 'hide'">
          <h3 i18n:translate="XXX">Unverified Addresses</h3>
          <ul id="unverified-addresses">
            <li class="ui-state-default ui-corner-all"
              tal:repeat="address view/unverifiedAddresses"
              tal:attributes="id address">
              <samp class="email" 
                tal:content="address">email@example.com</samp>
              <span class="actions">
                <a href="#" 
                  title="Resend a verification email to this address"
                class="resendLink">Resend</a>
                <a class="removeLink"
                  title="Remove this address from your profile"
                  tal:condition="view/deliveryAddresses"
                  tal:attributes="id string:remove-${address}">Remove</a>
              </span><!--actions-->
            </li>
          </ul>
        </div><!--unverified-->
      </div><!--addresslists-->
      <div id="add-email-address">
        <a href="#" id="open-add">Add an address&#8230;</a>
        <div id="add-email-address-dialog" style="display:none;"
          title="Add an address">
          <form enctype="multipart/form-data"  method="post" action="."
            id="add-email-address-form" tal:attributes="action request/URL">
            <tal:block 
              define="widgets python:[view.widgets['newAddress']];">
              <tal:block replace="structure provider:groupserver.FormWidgets"/>
            </tal:block>
            <!--I know that the jQuery dialog does this, but it does
              - not play nice with Zope. -->
            <div class="buttons">
              <tal:block define="action view/actions/form.actions.add">
                <div class="formelementbutton">
                  <span tal:replace="structure action/render">Button</span>
                </div>
              </tal:block>
            </div><!--buttons-->
          </form>
        </div><!--add-email-address-dialog-->
      </div><!--add-email-address-->
    </tal:block>
    <tal:block metal:fill-slot="javascript">
      <script type="text/javascript"
        src="/++resource++jquery-ui-1.8.9.custom.min.js">&#160;</script>
      <script type="text/javascript"
        src="/++resource++check-unverified-addresses.js">&#160;</script>
      <script type="text/javascript">
        jQuery.noConflict();
        
        var updateDelivery = function () {
          // Copy each addresses in the Default Addresses list to the
          // newDeliveries variable
          var newDeliveries = "";
          jQuery("#delivery-addresses").children().children(".email").each(function () {
            newDeliveries += jQuery(this).text() + "\n";
          });
          // Set the text of the hidden deliveryAddresses form element
          // to the default addresses text.
          jQuery("#form\\.deliveryAddresses").text(newDeliveries);
        }
        
        var updateOther = function () {
          // Now do the same for the "other" addresses
          var newOthers = "";
          jQuery("#other-addresses").children().children(".email").each(function () {
            newOthers += jQuery(this).text() + "\n";
          });
          jQuery("#form\\.otherAddresses").text(newOthers);
        }
        
        var updateUnverified = function () {
          // Aaaand for the unverified addresses
          var newUnverified = "";
          jQuery("#unverified-addresses").children().children(".email").each(function () {
            newUnverified += jQuery(this).text() + "\n";
          });
          jQuery("#form\\.unverifiedAddresses").text(newUnverified);
        }

        var updateAddresses = function () {
          updateDelivery();
          updateOther();
          updateUnverified();
          
          // Blank the resend verification address. If this needs to be
          // set the resendVerification function will handle it.
          jQuery('#form\\.resendVerificationAddress').val('');
          
          // Submit the form.
          jQuery("#form\\.actions\\.change").click();
        };
        
        var showDialog = function () {
          jQuery('#add-email-address-dialog').dialog("open");
        };
        
        var resendVerification = function () {
          var email = null;
          updateDelivery();
          updateOther();
          updateUnverified();
          email = jQuery(this).parents('li').find('.email').text();
          jQuery('#form\\.resendVerificationAddress').val(email);
          // Submit the form.
          jQuery("#form\\.actions\\.change").click();
        }
        
        var removeAddr = function () {
          jQuery(this).parents('li').remove();
          updateAddresses();
        }
        
        var highlightDelivery = function(event, ui) {
          jQuery('#delivery-addresses').addClass("ui-state-hover");
        }
        var lowlightDelivery = function(event, ui) {
          jQuery('#delivery-addresses').removeClass("ui-state-hover");
        }
        var highlightOther = function(event, ui) {
          jQuery('#other-addresses').addClass("ui-state-hover");
        }
        var lowlightOther = function(event, ui) {
          jQuery('#other-addresses').removeClass("ui-state-hover");
        }
        
        jQuery(document).ready( function () {
          // Set up the two lists of addresses.
          jQuery("#delivery-addresses").sortable({
            connectWith: "#other-addresses",
            update: updateAddresses,
            cancel: ".ui-state-disabled",
            start: highlightOther,
            stop: lowlightOther,
          }).disableSelection();
          
          jQuery("#other-addresses").sortable({
            connectWith: "#delivery-addresses",
            update: updateAddresses,
            start: highlightDelivery,
            stop: lowlightDelivery,
          }).disableSelection();
          
          // Add dialog
          var o = { autoOpen: false, minWidth: 516, modal: true };
          jQuery('#add-email-address-dialog').dialog(o);
          jQuery('#open-add')
            .button({ icons: {primary:'ui-icon-plusthick'}})
            .removeAttr('href')
            .click(showDialog);
          jQuery('#form\\.actions\\.add')
            .button({ icons: {primary:'ui-icon-plusthick'}});
          jQuery('.removeLink')
            .button({ icons: {primary:'ui-icon-minusthick'}})
            .removeAttr('href')
            .click(removeAddr);
          jQuery('.resendLink')
            .button({ icons: {primary:'ui-icon-mail-closed'}})
            .removeAttr('href')
            .click(resendVerification);
        });
        GSCheckVerified.poll();
      </script>
    </tal:block>
  </body>
</html>
