<configure xmlns="http://namespaces.zope.org/zope"
           xmlns:browser="http://namespaces.zope.org/browser"
           i18n_domain="groupserver">

  <include package="zope.viewlet" file="meta.zcml" />
  <include package="zope.browsermenu" file="meta.zcml" />

  <browser:page
    name="emailsettings.html"
    for="Products.CustomUserFolder.interfaces.ICustomUser"
    class=".settings.ChangeEmailSettingsForm"
    permission="zope2.ManageProperties"/>
  <browser:menuItems
    menu="user_profile_menu"
    for="Products.CustomUserFolder.interfaces.ICustomUser">
    <browser:menuItem
      action="emailsettings.html"
      title="Change Email Settings"
      description="Change your email addresses and delivery options"
      order="3"
      permission="zope2.ManageProperties"/>
  </browser:menuItems>

  <!--JSON form endpoints-->
  <browser:page
    name="gs-profile-email-settings-status.html"
    for="Products.CustomUserFolder.interfaces.ICustomUser"
    class=".status.Status"
    permission="zope2.ManageProperties"/>
  <browser:page
    name="gs-profile-email-settings-add.html"
    for="Products.CustomUserFolder.interfaces.ICustomUser"
    class=".add.AddAddress"
    permission="zope2.ManageProperties"/>
  <browser:page
    name="gs-profile-email-settings-delete.html"
    for="Products.CustomUserFolder.interfaces.ICustomUser"
    class=".delete.DeleteAddress"
    permission="zope2.ManageProperties"/>
  <browser:page
    name="gs-profile-email-settings-demote.html"
    for="Products.CustomUserFolder.interfaces.ICustomUser"
    class=".normal.DemoteAddress"
    permission="zope2.ManageProperties"/>
  <browser:page
    name="gs-profile-email-settings-prefer.html"
    for="Products.CustomUserFolder.interfaces.ICustomUser"
    class=".prefer.PreferAddress"
    permission="zope2.ManageProperties"/>
  <browser:page
    name="gs-profile-email-settings-resend.html"
    for="Products.CustomUserFolder.interfaces.ICustomUser"
    class=".resend.ResendVerification"
    permission="zope2.ManageProperties"/>

  <!--JavaScript resources-->
  <browser:resource
    name="emailsettings-20140321.js"
    file="browser/javascript/emailsettings.js"
    permission="zope2.Public"/>
  <browser:resource
    name="emailsettings-min-20140321.js"
    file="browser/javascript/emailsettings-min.js"
    permission="zope2.Public"/>

  <!--help-->
  <browser:viewlet
    name="gs-profile-email-settings-help"
    manager="gs.help.interfaces.IUserHelp"
    template="browser/templates/help.pt"
    permission="zope2.Public"
    weight="2" />

</configure>
